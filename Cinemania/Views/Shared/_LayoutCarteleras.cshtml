<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Page.Title</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> <!-- nav responsive-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    @RenderSection("Menu", false)

    @RenderBody()
    <div class="container">

        <h2 class="text-center">Administracion de carteleras</h2>

        <!-- LINK VOLVER -->
        <div class="btn-group">
            <a href="./Inicio" class="btn btn-danger"><span class="glyphicon glyphicon-arrow-left"></span> Volver</a>
        </div>

        <!-- LINK NUEVO -->
        <div class="btn-group">
            <a href="./NuevoCartelera" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Nuevo</a>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Imagen</th>
                    <th>Genero</th>
                    <th>Duracion</th>
                    <th class="text-center">Operacion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Cinemania.Carteleras c in Model)
                {
                    <tr>
                        <td>@c.IdSede</td>
                        <td>@c.IdPelicula</td>
                        <td>@c.HoraInicio</td>                        
                        <td>@c.FechaInicio</td>                       
                        <!--<td class="text-center"><a href="./EditarPelicula?IdPelicula=@*p.IdPelicula*@" class="btn btn-info"><span class="glyphicon glyphicon-pencil"></span> Editar</a></td>-->
                    </tr>
                }
            </tbody>
        </table>
        <script src="~/Scripts/jquery-3.1.1.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
        <link href="~/Content/jquery-ui.css" rel="stylesheet" />
        <script src="~/Scripts/jquery-ui.min.js"></script>
        <script src="~/Scripts/Fecha.js"></script>
        <script src="~/Scripts/Horario.js"></script>
</body>
</html>
